<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic_search_progressBar"
        android:indeterminate="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:id="@+id/topic_search_text"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignLeft="@+id/topic_image"
            android:layout_alignStart="@+id/topic_image"
            android:layout_alignRight="@+id/topic_image"
            android:layout_alignEnd="@+id/topic_image"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/textView"
            android:layout_below="@+id/topic_image" />


    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/topic_image"
        android:layout_below="@+id/topicHeader"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/topic_search_progressBar"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Chat"
        android:id="@+id/topic_chat"
        android:onClick="runChatClient"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/topicHeader"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:id="@+id/chkIos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:layout_above="@+id/topic_chat"
        android:layout_alignRight="@+id/topic_search_progressBar"
        android:layout_alignEnd="@+id/topic_search_progressBar" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_above="@+id/chkIos"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Set Reputation Threshhold(Optional)"
        android:id="@+id/textView"
        android:layout_above="@+id/seekBar"
        android:layout_toStartOf="@+id/topic_search_progressBar"
        android:layout_alignRight="@+id/topic_search_progressBar"
        android:layout_alignEnd="@+id/topic_search_progressBar" />

    <!--android:layout_above="@+id/topic_search_text"/>-->

</RelativeLayout>
